enum UserRole {
  OWNER
  ADMIN
  TENANT
}

enum DocumentType {
  DNI
  PASSPORT
}

enum UserProvider {
  GOOGLE
  PASSWORD
}

enum TenantPaymentStatus {
  PENDING
  PAID
  DUE_SOON
}

model Users {
  id             String          @id @default(uuid())
  firstName      String
  lastName       String
  email          String
  password       String?
  role           UserRole        @default(OWNER)
  provider       UserProvider    @default(PASSWORD)
  usersProfile   UsersProfile?
  tenantsProfile TenantsProfile?
  properties     Properties[]
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
}

model UsersProfile {
  id        String   @id @default(uuid())
  userId    String   @unique
  user      Users    @relation(fields: [userId], references: [id], onDelete: Cascade)
  phone     String?
  avatarUrl String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model TenantsProfile {
  id             String              @id @default(uuid())
  userId         String              @unique
  user           Users               @relation(fields: [userId], references: [id], onDelete: Cascade)
  propertyId     String?             @unique
  property       Properties?         @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  nationality    String
  documentType   DocumentType        @default(DNI)
  documentNumber String
  phone          String?
  paymentStatus  TenantPaymentStatus @default(PAID)
  emergencyPhone String?
  entryDate      DateTime
  exitDate       DateTime?
  paymentDay     Int
  avatarUrl      String?
  createdAt      DateTime            @default(now())
  updatedAt      DateTime            @updatedAt
}
